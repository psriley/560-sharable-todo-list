<Window x:Class="ToDone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDone"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="Friends" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="My Tasks" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
        <Label Content="Groups" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top"/>
        
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />

        <TextBlock x:Name="title" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="0" FontSize="20" TextAlignment="Left" Margin="10">Tasks</TextBlock>
    </Grid>
</Window>
